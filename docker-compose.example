version: '3.8'

services:
  nginx:
    build:
      context: .
      dockerfile: ./nginx/Dockerfile
    ports:
      - "1188:80"
    depends_on:
      - backend
      - frontend
    networks:
      - app-network

  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
    expose:
      - "5173"
    networks:
      - app-network

  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    expose:
      - "3001"
    depends_on:
      db:
        condition: service_healthy
    environment:
      - DATABASE_URL=
      - SESSION_SECRET=
      - PORT=
      - GEMINI_API_KEY=
      - GEMINI_MODEL=
    networks:
      - app-network

  db:
    image: postgres:16-alpine
    container_name: legalcase_db
    environment:
      - POSTGRES_USER=
      - POSTGRES_PASSWORD=
      - POSTGRES_DB=legalcasebuilder
    volumes:
      - db-data:/var/lib/postgresql/data
    expose:
      - "5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres -d legalcasebuilder"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s
    networks:
      - app-network

volumes:
  db-data:

networks:
  app-network:
    driver: bridge
